<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:paddingLeft="@dimen/public_space_value_8"
              android:paddingRight="@dimen/public_space_value_8"
              android:paddingTop="@dimen/public_space_value_13"
              android:paddingBottom="@dimen/public_space_value_10"
              android:orientation="vertical">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">
        <ImageView
                android:layout_width="@dimen/public_space_value_6"
                android:layout_height="@dimen/public_space_value_6"
                android:scaleType="fitXY"
                android:src="@mipmap/icon_theme_cycle"/>

        <TextView
                android:id="@+id/tv_msg_title"
                android:layout_width="wrap_content"
                android:layout_marginLeft="@dimen/public_space_value_5"
                android:textSize="@dimen/normal_text_size"
                android:textColor="@color/text_default"
                android:layout_height="wrap_content"/>

        <TextView
                android:id="@+id/tv_msg_time"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="right"
                android:textSize="@dimen/smaller_text_size"
                android:textColor="@color/text_default"
                android:layout_height="wrap_content"/>
    </LinearLayout>

    <TextView
            android:id="@+id/tv_msg_content"
            android:layout_marginTop="@dimen/public_space_value_10"
            android:layout_width="match_parent"
            android:textSize="@dimen/small_text_size"
            android:textColor="@color/text_second_default"
            android:layout_height="wrap_content"/>

</LinearLayout>
