<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:selectableItemBackground="@null"
              android:selectableItemBackgroundBorderless="@null"
              android:gravity="center"
              android:orientation="vertical">

    <ImageView
            android:id="@+id/iv_tab_item"
            android:layout_width="@dimen/public_space_value_25"
            android:layout_height="@dimen/public_space_value_25"
            android:contentDescription="@string/app_name"
            android:scaleType="fitCenter" />

    <TextView
            android:layout_marginTop="@dimen/public_space_value_3"
            android:id="@+id/tv_tab_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/small_text_size"
            android:textColor="@drawable/selector_tab_text" />
</LinearLayout>