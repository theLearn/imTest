<?xml version="1.0" encoding="utf-8"?>
<com.example.hongcheng.common.view.LinearLayoutForRect
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:ll_scale="1"
        android:orientation="vertical">
    <ImageView
            android:id="@+id/iv_group_member_photo"
            android:scaleType="fitXY"
            android:src="@mipmap/icon_photo_default"
            android:layout_width="@dimen/public_space_value_60"
            android:layout_height="@dimen/public_space_value_60"/>

    <TextView
            android:id="@+id/tv_group_member_name"
            android:layout_width="wrap_content"
            android:singleLine="true"
            android:layout_margin="@dimen/public_space_value_10"
            android:textSize="@dimen/small_text_size"
            android:textColor="@color/text_second_default"
            android:layout_height="wrap_content"/>

</com.example.hongcheng.common.view.LinearLayoutForRect>
