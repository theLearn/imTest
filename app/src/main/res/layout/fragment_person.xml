<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none">
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
        <LinearLayout
                android:id="@+id/ll_person_user_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/public_space_value_20"
                android:paddingLeft="@dimen/public_space_value_25"
                android:paddingRight="@dimen/public_space_value_20"
                android:paddingBottom="@dimen/public_space_value_40"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal">
            <ImageView
                    android:id="@+id/iv_user_photo"
                    android:layout_width="@dimen/img_large"
                    android:layout_height="@dimen/img_large"
                    android:scaleType="fitXY"
                    android:src="@mipmap/icon_photo_default"/>

            <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="@dimen/public_space_value_15"
                    android:orientation="vertical">
                <TextView
                        android:id="@+id/tv_person_nick"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/person_nick_default"
                        android:textSize="@dimen/normal_text_size"
                        android:textColor="@color/text_default"/>

                <TextView
                        android:layout_marginTop="@dimen/public_space_value_15"
                        android:id="@+id/tv_person_account"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/person_account_show"
                        android:textSize="@dimen/small_text_size"
                        android:textColor="@color/text_second_default"/>
            </LinearLayout>

            <ImageView
                    android:layout_width="@dimen/public_space_value_10"
                    android:layout_height="@dimen/public_space_value_10"
                    android:scaleType="fitCenter"
                    android:src="@mipmap/icon_arrow_gray_right"/>
        </LinearLayout>

        <LinearLayout
                android:id="@+id/ll_person_package"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/public_space_value_10"
                android:background="@color/white"
                android:paddingLeft="@dimen/public_space_value_20"
                android:paddingRight="@dimen/public_space_value_20"
                android:paddingTop="@dimen/public_space_value_15"
                android:paddingBottom="@dimen/public_space_value_15"
                android:gravity="center_vertical">
            <ImageView
                    android:layout_width="@dimen/public_space_value_20"
                    android:layout_height="@dimen/public_space_value_20"
                    android:scaleType="fitCenter"
                    android:src="@mipmap/icon_package"/>

            <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/public_space_value_20"
                    android:text="@string/person_my_package"
                    android:textSize="@dimen/normal_text_size"
                    android:textColor="@color/text_default"/>
            <ImageView
                    android:layout_width="@dimen/public_space_value_10"
                    android:layout_height="@dimen/public_space_value_10"
                    android:scaleType="fitCenter"
                    android:src="@mipmap/icon_arrow_gray_right"/>
        </LinearLayout>

        <LinearLayout
                android:id="@+id/ll_person_get_cash"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/white"
                android:layout_marginTop="@dimen/public_space_value_10"
                android:paddingLeft="@dimen/public_space_value_20"
                android:paddingRight="@dimen/public_space_value_20"
                android:paddingTop="@dimen/public_space_value_15"
                android:paddingBottom="@dimen/public_space_value_15"
                android:gravity="center_vertical">
            <ImageView
                    android:layout_width="@dimen/public_space_value_20"
                    android:layout_height="@dimen/public_space_value_20"
                    android:scaleType="fitCenter"
                    android:src="@mipmap/icon_cash_get"/>

            <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/public_space_value_20"
                    android:text="@string/person_my_get"
                    android:textSize="@dimen/normal_text_size"
                    android:textColor="@color/text_default"/>
            <ImageView
                    android:layout_width="@dimen/public_space_value_10"
                    android:layout_height="@dimen/public_space_value_10"
                    android:scaleType="fitCenter"
                    android:src="@mipmap/icon_arrow_gray_right"/>
        </LinearLayout>

        <View android:background="@color/line_gray"
              android:layout_width="match_parent"
              android:layout_marginLeft="@dimen/public_space_value_60"
              android:layout_height="@dimen/px1"/>

        <LinearLayout
                android:id="@+id/ll_person_red_record"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/public_space_value_20"
                android:paddingRight="@dimen/public_space_value_20"
                android:paddingTop="@dimen/public_space_value_15"
                android:paddingBottom="@dimen/public_space_value_15"
                android:background="@color/white"
                android:gravity="center_vertical">
            <ImageView
                    android:layout_width="@dimen/public_space_value_20"
                    android:layout_height="@dimen/public_space_value_20"
                    android:scaleType="fitCenter"
                    android:src="@mipmap/icon_red_pack"/>

            <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/public_space_value_20"
                    android:text="@string/person_red_package_record"
                    android:textSize="@dimen/normal_text_size"
                    android:textColor="@color/text_default"/>
            <ImageView
                    android:layout_width="@dimen/public_space_value_10"
                    android:layout_height="@dimen/public_space_value_10"
                    android:scaleType="fitCenter"
                    android:src="@mipmap/icon_arrow_gray_right"/>
        </LinearLayout>

        <View android:background="@color/line_gray"
              android:layout_width="match_parent"
              android:layout_marginLeft="@dimen/public_space_value_60"
              android:layout_height="@dimen/px1"/>
        <LinearLayout
                android:id="@+id/ll_person_cash"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/public_space_value_20"
                android:paddingRight="@dimen/public_space_value_20"
                android:paddingTop="@dimen/public_space_value_15"
                android:paddingBottom="@dimen/public_space_value_15"
                android:background="@color/white"
                android:gravity="center_vertical">
            <ImageView
                    android:layout_width="@dimen/public_space_value_20"
                    android:layout_height="@dimen/public_space_value_20"
                    android:scaleType="fitCenter"
                    android:src="@mipmap/icon_cash"/>

            <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/public_space_value_20"
                    android:text="@string/person_to_get_cash"
                    android:textSize="@dimen/normal_text_size"
                    android:textColor="@color/text_default"/>
            <ImageView
                    android:layout_width="@dimen/public_space_value_10"
                    android:layout_height="@dimen/public_space_value_10"
                    android:scaleType="fitCenter"
                    android:src="@mipmap/icon_arrow_gray_right"/>
        </LinearLayout>

        <LinearLayout
                android:id="@+id/ll_person_setting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/white"
                android:layout_marginTop="@dimen/public_space_value_10"
                android:paddingLeft="@dimen/public_space_value_20"
                android:paddingRight="@dimen/public_space_value_20"
                android:paddingTop="@dimen/public_space_value_15"
                android:paddingBottom="@dimen/public_space_value_15"
                android:gravity="center_vertical">
            <ImageView
                    android:layout_width="@dimen/public_space_value_20"
                    android:layout_height="@dimen/public_space_value_20"
                    android:scaleType="fitCenter"
                    android:src="@mipmap/icon_setting"/>

            <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/public_space_value_20"
                    android:text="@string/person_setting"
                    android:textSize="@dimen/normal_text_size"
                    android:textColor="@color/text_default"/>
            <ImageView
                    android:layout_width="@dimen/public_space_value_10"
                    android:layout_height="@dimen/public_space_value_10"
                    android:scaleType="fitCenter"
                    android:src="@mipmap/icon_arrow_gray_right"/>
        </LinearLayout>

        <View android:background="@color/line_gray"
              android:layout_width="match_parent"
              android:layout_marginLeft="@dimen/public_space_value_60"
              android:layout_height="@dimen/px1"/>

        <LinearLayout
                android:id="@+id/ll_person_about"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/public_space_value_20"
                android:paddingRight="@dimen/public_space_value_20"
                android:paddingTop="@dimen/public_space_value_15"
                android:paddingBottom="@dimen/public_space_value_15"
                android:background="@color/white"
                android:gravity="center_vertical">
            <ImageView
                    android:layout_width="@dimen/public_space_value_20"
                    android:layout_height="@dimen/public_space_value_20"
                    android:scaleType="fitCenter"
                    android:src="@mipmap/icon_about"/>

            <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/public_space_value_20"
                    android:text="@string/person_about_us"
                    android:textSize="@dimen/normal_text_size"
                    android:textColor="@color/text_default"/>
            <ImageView
                    android:layout_width="@dimen/public_space_value_10"
                    android:layout_height="@dimen/public_space_value_10"
                    android:scaleType="fitCenter"
                    android:src="@mipmap/icon_arrow_gray_right"/>
        </LinearLayout>

        <View android:background="@color/line_gray"
              android:layout_width="match_parent"
              android:layout_marginLeft="@dimen/public_space_value_60"
              android:layout_height="@dimen/px1"/>
        <LinearLayout
                android:id="@+id/ll_person_call"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/public_space_value_20"
                android:paddingRight="@dimen/public_space_value_20"
                android:paddingTop="@dimen/public_space_value_15"
                android:paddingBottom="@dimen/public_space_value_15"
                android:background="@color/white"
                android:gravity="center_vertical">
            <ImageView
                    android:layout_width="@dimen/public_space_value_20"
                    android:layout_height="@dimen/public_space_value_20"
                    android:scaleType="fitCenter"
                    android:src="@mipmap/icon_call"/>

            <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/public_space_value_20"
                    android:text="@string/person_call"
                    android:textSize="@dimen/normal_text_size"
                    android:textColor="@color/text_default"/>
            <ImageView
                    android:layout_width="@dimen/public_space_value_10"
                    android:layout_height="@dimen/public_space_value_10"
                    android:scaleType="fitCenter"
                    android:src="@mipmap/icon_arrow_gray_right"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
