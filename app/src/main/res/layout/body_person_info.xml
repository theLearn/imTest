<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white"
              android:orientation="vertical">
    <LinearLayout
            android:id="@+id/ll_person_info_photo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/public_space_value_10"
            android:background="@color/white"
            android:paddingLeft="@dimen/public_space_value_20"
            android:paddingRight="@dimen/public_space_value_20"
            android:paddingTop="@dimen/public_space_value_15"
            android:paddingBottom="@dimen/public_space_value_15"
            android:gravity="center_vertical">
        <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/public_space_value_10"
                android:text="@string/photo"
                android:textSize="@dimen/normal_text_size"
                android:textColor="@color/text_default"/>

        <ImageView
                android:id="@+id/iv_person_info_photo"
                android:layout_width="@dimen/img_large"
                android:layout_height="@dimen/img_large"
                android:layout_marginRight="@dimen/public_space_value_10"
                android:scaleType="fitCenter"
                android:src="@mipmap/icon_photo_default"/>

        <ImageView
                android:layout_width="@dimen/public_space_value_10"
                android:layout_height="@dimen/public_space_value_10"
                android:scaleType="fitCenter"
                android:src="@mipmap/icon_arrow_gray_right"/>
    </LinearLayout>

    <View android:background="@color/line_gray"
          android:layout_width="match_parent"
          android:layout_marginLeft="@dimen/public_space_value_20"
          android:layout_height="@dimen/px1"/>

    <LinearLayout
            android:id="@+id/ll_person_info_nick"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/public_space_value_20"
            android:paddingRight="@dimen/public_space_value_20"
            android:paddingTop="@dimen/public_space_value_15"
            android:paddingBottom="@dimen/public_space_value_15"
            android:background="@color/white"
            android:gravity="center_vertical">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/my_nick"
                android:textSize="@dimen/normal_text_size"
                android:textColor="@color/text_default"/>

        <TextView
                android:id="@+id/tv_person_info_nick"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/public_space_value_10"
                android:layout_marginRight="@dimen/public_space_value_10"
                android:gravity="right"
                android:textSize="@dimen/normal_text_size"
                android:textColor="@color/text_default"/>
        <ImageView
                android:layout_width="@dimen/public_space_value_10"
                android:layout_height="@dimen/public_space_value_10"
                android:scaleType="fitCenter"
                android:src="@mipmap/icon_arrow_gray_right"/>
    </LinearLayout>

    <View android:background="@color/line_gray"
          android:layout_width="match_parent"
          android:layout_marginLeft="@dimen/public_space_value_20"
          android:layout_height="@dimen/px1"/>

    <LinearLayout
            android:id="@+id/ll_person_info_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/public_space_value_20"
            android:paddingRight="@dimen/public_space_value_20"
            android:paddingTop="@dimen/public_space_value_15"
            android:paddingBottom="@dimen/public_space_value_15"
            android:background="@color/white"
            android:gravity="center_vertical">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/phone_number"
                android:textSize="@dimen/normal_text_size"
                android:textColor="@color/text_default"/>

        <TextView
                android:id="@+id/tv_person_info_phone"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/public_space_value_10"
                android:layout_marginRight="@dimen/public_space_value_10"
                android:gravity="right"
                android:textSize="@dimen/normal_text_size"
                android:textColor="@color/text_default"/>
        <ImageView
                android:layout_width="@dimen/public_space_value_10"
                android:layout_height="@dimen/public_space_value_10"
                android:scaleType="fitCenter"
                android:visibility="invisible"
                android:src="@mipmap/icon_arrow_gray_right"/>
    </LinearLayout>

    <View android:background="@color/line_gray"
          android:layout_width="match_parent"
          android:layout_marginLeft="@dimen/public_space_value_20"
          android:layout_height="@dimen/px1"/>

    <Button
            android:id="@+id/bt_logout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/public_space_value_40"
            android:layout_marginLeft="@dimen/public_space_value_20"
            android:layout_marginRight="@dimen/public_space_value_20"
            android:layout_marginTop="@dimen/public_space_value_200"
            android:background="@drawable/bg_bt_bottom"
            android:textSize="@dimen/large_text_size"
            android:text="@string/logout"
            android:textColor="@color/white"/>
</LinearLayout>
