<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:paddingLeft="@dimen/public_space_value_8"
              android:paddingRight="@dimen/public_space_value_8"
              android:paddingTop="@dimen/public_space_value_18"
              android:paddingBottom="@dimen/public_space_value_18"
              android:gravity="center_vertical"
              android:orientation="horizontal">

    <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        <TextView
                android:id="@+id/tv_red_package_type"
                android:layout_width="wrap_content"
                android:text="@string/title_home_left"
                android:textSize="@dimen/big_text_size"
                android:textColor="@color/text_default"
                android:layout_height="wrap_content"/>

        <TextView
                android:id="@+id/tv_red_package_time"
                android:layout_marginTop="@dimen/public_space_value_10"
                android:layout_width="wrap_content"
                android:textSize="@dimen/smaller_text_size"
                android:textColor="@color/text_second_default"
                android:layout_height="wrap_content"/>
    </LinearLayout>

    <TextView
            android:id="@+id/tv_red_package_amount"
            android:layout_width="wrap_content"
            android:textSize="@dimen/normal_text_size"
            android:textColor="@color/colorBase"
            android:layout_height="wrap_content"/>

</LinearLayout>
