<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white"
              android:paddingLeft="@dimen/public_space_value_8"
              android:paddingRight="@dimen/public_space_value_8"
              android:orientation="vertical">
    <LinearLayout
            android:id="@+id/ll_setting_bind_account"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/public_space_value_20"
            android:paddingRight="@dimen/public_space_value_20"
            android:paddingTop="@dimen/public_space_value_15"
            android:paddingBottom="@dimen/public_space_value_15"
            android:background="@color/white"
            android:gravity="center_vertical">
        <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/public_space_value_10"
                android:text="@string/bind_account"
                android:textSize="@dimen/normal_text_size"
                android:textColor="@color/text_default"/>
        <ImageView
                android:layout_width="@dimen/public_space_value_10"
                android:layout_height="@dimen/public_space_value_10"
                android:scaleType="fitCenter"
                android:src="@mipmap/icon_arrow_gray_right"/>
    </LinearLayout>

    <include layout="@layout/line_horizontal"/>

    <LinearLayout
            android:id="@+id/ll_setting_modify_pw"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/public_space_value_20"
            android:paddingRight="@dimen/public_space_value_20"
            android:paddingTop="@dimen/public_space_value_15"
            android:paddingBottom="@dimen/public_space_value_15"
            android:background="@color/white"
            android:gravity="center_vertical">
        <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/public_space_value_10"
                android:text="@string/modify_pw"
                android:textSize="@dimen/normal_text_size"
                android:textColor="@color/text_default"/>
        <ImageView
                android:layout_width="@dimen/public_space_value_10"
                android:layout_height="@dimen/public_space_value_10"
                android:scaleType="fitCenter"
                android:src="@mipmap/icon_arrow_gray_right"/>
    </LinearLayout>

    <include layout="@layout/line_horizontal"/>

    <LinearLayout
            android:id="@+id/ll_setting_check_app_version"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/public_space_value_20"
            android:paddingRight="@dimen/public_space_value_20"
            android:paddingTop="@dimen/public_space_value_15"
            android:paddingBottom="@dimen/public_space_value_15"
            android:background="@color/white"
            android:gravity="center_vertical">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/version_check"
                android:textSize="@dimen/normal_text_size"
                android:textColor="@color/text_default"/>

        <TextView
                android:id="@+id/tv_current_app_version"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="@string/app_version_tip"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/public_space_value_10"
                android:layout_marginRight="@dimen/public_space_value_10"
                android:gravity="right"
                android:textSize="@dimen/normal_text_size"
                android:textColor="@color/text_second_default"/>
        <ImageView
                android:layout_width="@dimen/public_space_value_10"
                android:layout_height="@dimen/public_space_value_10"
                android:scaleType="fitCenter"
                android:src="@mipmap/icon_arrow_gray_right"/>
    </LinearLayout>

    <include layout="@layout/line_horizontal"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/public_space_value_20"
            android:paddingRight="@dimen/public_space_value_20"
            android:paddingTop="@dimen/public_space_value_15"
            android:paddingBottom="@dimen/public_space_value_15"
            android:background="@color/white"
            android:gravity="center_vertical">
        <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="@string/sound"
                android:textSize="@dimen/normal_text_size"
                android:textColor="@color/text_default"/>

        <com.example.hongcheng.common.view.SlipSwitchView
                android:id="@+id/ssv_setting_sound"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/public_space_value_10"/>
    </LinearLayout>

    <include layout="@layout/line_horizontal"/>

</LinearLayout>
