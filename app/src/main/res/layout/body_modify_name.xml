<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white">

    <EditText
            android:id="@+id/et_modify_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_gray_stroke"
            android:paddingStart="@dimen/public_space_value_20"
            android:paddingEnd="@dimen/public_space_value_20"
            android:paddingTop="@dimen/public_space_value_15"
            android:paddingBottom="@dimen/public_space_value_15"
            android:layout_marginTop="@dimen/public_space_value_15"
            android:layout_marginBottom="@dimen/public_space_value_15"
            android:layout_marginRight="@dimen/public_space_value_20"
            android:layout_marginLeft="@dimen/public_space_value_20"
            android:textSize="@dimen/normal_text_size"
            android:textColor="@color/text_default"
            android:hint="@string/please_input_nick_name_hint"
            android:singleLine="true"
            android:inputType="text"
            android:maxLength="20"/>

    <Button
            android:id="@+id/bt_modify_name_submit"
            android:layout_width="match_parent"
            android:layout_height="@dimen/public_space_value_40"
            android:layout_margin="@dimen/public_space_value_20"
            android:background="@drawable/bg_bt_bottom"
            android:textSize="@dimen/large_text_size"
            android:text="@string/ok"
            android:layout_alignParentBottom="true"
            android:textColor="@color/white"/>
</RelativeLayout>

